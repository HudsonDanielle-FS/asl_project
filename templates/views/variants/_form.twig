<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">

   
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}" />
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="{{ variant.price }}" />
    </div>
     <div>
        <label for="slug">Slug:</label>
        <input type="text" name="slug" id="slug" value="{{ product.slug }}" />
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" value="{{ product.description }}" />
    </div>
    <div>
        <label for="inventory">Inventory:</label>
        <input type="number" name="inventory" id="inventory" value="{{ product.inventory }}" />
    </div>
    <div>
        <label>Product:</label>
        <select name="productId">
            {% for product in products %}
                <option value="{{ product.id }}" {% if product.id == variant.prodictId %}selected="selected"{% endif %}>{{ product.title }}</option>
            {% endfor %}
        </select>
    </div>
    <div>
        <input type="submit" type="submit" />
    </div>
</form>